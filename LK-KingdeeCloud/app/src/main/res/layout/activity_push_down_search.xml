<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.PushDownSearchActivity">
    <include layout="@layout/top_bar"/>
    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_margin="4dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/ed_no"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="输入柜号查找采购入库单"
                    android:gravity="center"
                    android:background="@drawable/bg_edittext_selector"
                    android:singleLine="true"
                    android:text="CGRK00094"
                    android:textSize="15sp" />
                <ImageView
                    android:id="@+id/iv_find"
                    android:background="@mipmap/find"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
            </LinearLayout>
            <EditText
                android:id="@+id/ed_org"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="输入柜号查找采购入库单"
                android:gravity="center"
                android:background="@drawable/bg_edittext_selector"
                android:singleLine="true"
                android:text="CGRK00094"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/ed_ids"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="输入柜号查找采购入库单"
                android:gravity="center"
                android:background="@drawable/bg_edittext_selector"
                android:singleLine="true"
                android:text="0"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.fangzuo.assist.cloud.widget.TextViewTitle
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    app:TextView_Title_justone="true"
                    app:TextView_Title_one="采购入库单编号"
                    app:TextView_Title_size="@dimen/size_detail" />
                <TextView
                    android:id="@+id/tv_code"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="match_parent"
                    android:background="@drawable/tv_bg"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.fangzuo.assist.cloud.widget.TextViewTitle
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    app:TextView_Title_justone="true"
                    app:TextView_Title_one="供应商"
                    app:TextView_Title_size="@dimen/size_detail" />
                <TextView
                    android:id="@+id/tv_client"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="match_parent"
                    android:background="@drawable/tv_bg"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.fangzuo.assist.cloud.widget.TextViewTitle
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    app:TextView_Title_justone="true"
                    app:TextView_Title_one="日期"
                    app:TextView_Title_size="@dimen/size_detail" />
                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="match_parent"
                    android:background="@drawable/tv_bg"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <Button
        android:textSize="@dimen/size_btn"
        android:id="@+id/btn_push_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_check"
        android:text="下推"
        android:textColor="@android:color/white" />

</LinearLayout>