<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#7be4e2e2"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp"
    android:orientation="vertical">
    <include layout="@layout/line_heng"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="18dp"
            android:id="@+id/tv_model1"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=""
            android:textStyle="bold"/>
        <include layout="@layout/line_shu" />
        <android.support.v7.widget.AppCompatTextView
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="18dp"
            android:id="@+id/tv_model2"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=""
            android:textStyle="bold"/>
        <include layout="@layout/line_shu" />
        <android.support.v7.widget.AppCompatTextView
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="18dp"
            android:id="@+id/tv_model5"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=""
            android:textStyle="bold"/>
        <include layout="@layout/line_shu" />
        <android.support.v7.widget.AppCompatTextView
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="18dp"
            android:id="@+id/tv_model4"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text=""
            android:textStyle="bold"/>
        <include layout="@layout/line_shu" />
        <android.support.v7.widget.AppCompatTextView
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="18dp"
            android:id="@+id/tv_model3"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=""
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>